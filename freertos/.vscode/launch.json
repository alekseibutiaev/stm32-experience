{
  "configurations": [
    {
      "name":"Cortex Debug",
      "cwd": "${workspaceRoot}",
      "executable": "${command:cmake.buildDirectory}/freertos.elf",
      "request": "launch",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "preLaunchTask": "cmake_build", 
      "preLaunchCommands": [ "load", "enable breakpoint", "monitor reset" ],
      "postLaunchCommands": ["monitor reset halt"],
      "servertype": "openocd",
      "device": "STM32F103ZE",
      "x-rtos": "auto",
      "configFiles": [
        "${workspaceFolder}/openocd.cfg/hardware_reset_connect_under_reset.cfg"
      ],
      "svdFile": "${workspaceFolder}/STM32F103.svd",
      "openOCDLaunchCommands": [
        "adapter speed 4000"
      ],
      "swoConfig": {
        "enabled": true,
        "source": "probe",
        "swoFrequency": 2000000,
        "cpuFrequency": 72000000,
        "swoPort": "5555",
        "decoders": [
          {
            "port": 0,
            "type": "console",
            "label": "SWO output",
            "encoding":"ascii"
          }
        ]
      }
    }
  ]
}