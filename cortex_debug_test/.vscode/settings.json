{
  "cmake.setBuildTypeOnMultiConfig": false,
  "cmake.buildDirectory": "${workspaceFolder}/build_${buildType}",
  "cmake.saveBeforeBuild": true,
  "cmake.default.buildDirectory": "${workspaceFolder}/build_${buildType}",
  "cmake.default.generator": "Unix Makefiles",
  "cmake.automaticReconfigure": false,
  "cmake.useCMakePresets": "never",
  "cmake.configureOnEdit": false,
  "cmake.configureArgs": [
    "-DCMAKE_TOOLCHAIN_FILE=tools_descriptor.cmake",
    "-DDUMP_ASM=OFF"
  ],
  "cmake.buildToolArgs": [
    "VERBOSE=1",
    "-j2"
  ],

  "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",

  "files.associations": {
    "cstdint": "c",
    "stm32f1xx_hal_conf.h": "c",
    "stdint.h": "c",
    "main.h": "c",
    "stdio.h": "c",
    "project.h": "c",
    "errno.h": "c"
  },

  "editor.tabSize": 2,
  "memory-view.showMemoryPanel": true,

  "cortex-debug.liveWatchRefreshRate": 5000,
  "cortex-debug.armToolchainPrefix": "arm-none-eabi-",

  "x0-cortex-debug.armToolchainPath": "/opt/arm-none-eabi-stm32/bin",
  "x0-cortex-debug.armToolchainPath.linux": "/opt/arm-none-eabi-stm32/bin",
  "x0-cortex-debug.gdbPath": "/opt/arm-none-eabi-stm32/bin/arm-none-eabi-gdb",
  "x0-cortex-debug.gdbPath.linux": "/opt/arm-none-eabi-stm32/bin/arm-none-eabi-gdb",
  "x0-cortex-debug.objdumpPath": "/opt/arm-none-eabi-stm32/bin/arm-none-eabi-objdump",
  "x0-cortex-debug.objdumpPath.linux": "/opt/arm-none-eabi-stm32/bin/arm-none-eabi-objdump",

  "x1-cortex-debug.armToolchainPath": "/opt/arm-none-eabi-arm/bin",
  "x1-cortex-debug.armToolchainPath.linux": "/opt/arm-none-eabi-arm/bin",
  "x1-cortex-debug.gdbPath": "/opt/arm-none-eabi-arm/bin/arm-none-eabi-gdb",
  "x1-cortex-debug.gdbPath.linux": "/opt/arm-none-eabi-arm/bin/arm-none-eabi-gdb",
  "x1-cortex-debug.objdumpPath": "/opt/arm-none-eabi-arm/bin/arm-none-eabi-objdump",
  "x1-cortex-debug.objdumpPath.linux": "/opt/arm-none-eabi-arm/bin/arm-none-eabi-objdump",

  "cortex-debug.armToolchainPath": "/usr/bin",
  "cortex-debug.armToolchainPath.linux": "/usr/bin",
  "cortex-debug.gdbPath": "/usr/bin/gdb-multiarch",
  "cortex-debug.gdbPath.linux": "/usr/bin/gdb-multiarch",
  "cortex-debug.objdumpPath": "/usr/bin/arm-none-eabi-objdump",
  "cortex-debug.objdumpPath.linux": "/usr/bin/arm-none-eabi-objdump",

  "cortex-debug.JLinkGDBServerPath": "/opt/SEGGER/JLink/JLinkGDBServer",
  "cortex-debug.JLinkGDBServerPath.linux": "/opt/SEGGER/JLink/JLinkGDBServer",

  "cortex-debug.stlinkPath": "/usr/bin/st-util",
  "cortex-debug.stlinkPath.linux": "/usr/bin/st-util",

  "cortex-debug.openocdPath": "/usr/bin/openocd",
  "cortex-debug.openocdPath.linux": "/usr/bin/openocd",

  "cortex-debug.dbgServerLogfile": "${workspaceFolder}",

}